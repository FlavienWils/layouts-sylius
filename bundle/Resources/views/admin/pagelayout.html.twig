{% extends '@SyliusAdmin/layout.html.twig' %}

{% trans_default_domain 'nglayouts_admin' %}

{% block metatags %}
    {% include '@NetgenLayoutsAdmin/admin/head.html.twig' %}
{% endblock %}

{% block title %}
    {{ 'pagelayout.title'|trans }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% include '@NetgenLayoutsAdmin/admin/stylesheets.html.twig' %}

    <link rel="stylesheet" href="{{ asset('bundles/netgenlayoutssylius/css/style.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% include '@NetgenLayoutsAdmin/admin/javascripts.html.twig' %}

    <script type="text/javascript" src="{{ asset('bundles/netgenlayoutssylius/js/app.js') }}"></script>
{% endblock %}

{% block pre_content %}
    <div class="ng-layouts-app">
        <div class="layouts-content">
{% endblock %}

{% block post_content %}
        </div>
    </div>
{% endblock %}
